@{
    ViewData["Title"] = "Home Page";
    //var fechaActual = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss");
}

<div id="lblEliminado" class="alert alert-warning mb-4 mt-2" role="alert" hidden>
    DATO ELIMINADO CORRECTAMENTE
</div>

<div id="lblCorrecto" class="alert alert-success mb-4 mt-2" role="alert" hidden>
    <i class="fas fa-check-square"></i> DATOS GUARDADOS CORRECTAMENTE
</div>

<div class="breadcrumb mb-4 mt-2">
</div>

<div class="card text-center">
    <div class="card-header">
        <i class="fas fa-building"></i> Eventos
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick='abrirModalEventos(null)'>Nuevo Evento</button>
            </div>
        </div>

        <hr />
        <table id="tbl" class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">FECHA EVENTO</th>
                    <th class="text-center">LUGAR EVENTO</th>
                    <th class="text-center">DESCRIPCION EVENTO</th>
                    <th class="text-center">PRECIO</th>
                    <th class="text-center">FECHA CREACIÓN</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h1 class="modal-title fs-5" id="lblTituloModal">Evento</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <input id="txtIdEvento" type="hidden" value="0" />
                <form id="contenedor" class="row">
                    <div class="form-floating mb-3">
                        <input class="form-control" id="txtFechaEvento" placeholder="FECHA EVENTO" type="datetime-local" name="txtFechaEvento" autocomplete="off" @* min="@fechaActual" *@>
                        <label for="txtFechaEvento" class="form-label">FECHA EVENTO</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="txtlugarEvento" placeholder="LUGAR EVENTO" name="txtlugarEvento" autocomplete="off">
                        <label for="txtlugarEvento" class="form-label">LUGAR EVENTO</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="txtDescripcionEvento" placeholder="DESCRIPCIÓN DEL EVENTO" name="txtDescripcionEvento" autocomplete="off">
                        <label for="txtDescripcionEvento" class="form-label">DESCRIPCIÓN DEL EVENTO</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="txtValorEvento" placeholder="VALOR" name="txtValorEvento" autocomplete="off" type="number">
                        <label for="txtValorEvento" class="form-label">VALOR</label>
                    </div>
                </form>
                <div id="lblError" class="alert alert-danger mt-2" role="alert" style="display:none;">
                    <i class="fas fa-exclamation-circle"></i>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick='GuardarDatos()'>Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="/Scripts/WebSite/JS_EVENTOS.js"></script>
}
